{
  "rules": {
    "rooms": {
      "$roomId": {
        ".read": true,
        ".write": true,
        "players": {
          "$uid": {
            ".read": true,
            ".write": "auth != null && auth.uid == $uid"
          }
        },
        "bullets": {
          ".read": true,
          ".write": "auth != null",
          "$bulletId": {
            ".read": true,
            ".write": "auth != null"
          }
        },
        "gameState": {
          ".read": true,
          ".write": "auth != null"
        },
        "serverState": {
          ".read": true,
          ".write": false,
          "projectiles": {
            ".read": true,
            ".write": false
          }
        },
        "serverEvents": {
          ".read": true,
          ".write": false,
          "damage": {
            ".read": true,
            ".write": false
          },
          "kills": {
            ".read": true,
            ".write": false
          }
        },
        "violations": {
          ".read": false,
          ".write": false
        }
      }
    }
  }
}
